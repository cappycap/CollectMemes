                      "transition": "fullscreen"
                    }
                  }
                },
                {
                  "type": "image",
                  "url": "{{$cache.cur.profileRight}}",
                  "style": {
                    "right": "5",
                    "width": "10%",
                    "top" : "5%-5"
                  },
                  "action": {
                    "type": "$href",
                    "options": {
                      "url": "https://collectmemes.com/devandroidaccess/profile.json",
                      "transition": "fullscreen"
                    }
                  }
                },
                {
                  "type": "label",
                  "text": "{{$cache.cur.title}}",
                  "style": {
                    "left": "3%",
                    "top": "10%",
                    "width": "94%",
                    "height": "6%",
                    "align": "center",
                    "color": "#111111",
                    "size": "35"
                  }
                },
                {
                  "type": "image",
                  "url": "{{$cache.cur.image}}",
                  "style": {
                    "top": "45%-{{$cache.cur.heightdiv2}}",
                    "left": "8%",
                    "width": "84%",
                    "height": "{{$cache.cur.height}}"
                  }
                },
                {
                  "type": "image",
                  "url": "{{$cache.currentSpinButton}}",
                  "style": {
                    "top": "70%+50",
