                    "align": "center",
                    "color": "#111111",
                    "size": "35"
                  }
                },
                {
                  "type": "label",
                  "text": "by {{$cache.cur.author}}",
                  "style": {
                    "left": "3%",
                    "top": "10%+40",
                    "width": "94%",
                    "height": "5%",
                    "align": "center",
                    "color": "#111111",
                    "size": "20"
                  }
                },
                {
                  "type": "image",
                  "url": "{{$cache.cur.image}}",
                  "style": {
                    "top": "45%-{{$cache.cur.heightdiv2}}",
                    "left": "8%",
                    "width": "84%",
                    "height": "{{$cache.cur.height}}"
                  }
                },
                {
                  "type": "image",
                  "url": "{{$cache.heart}}",
                  "style": {
                    "top": "59%+65",
                    "left": "8%",
                    "width": "15%"
                  },
                  "action": [
                    {
                      "{{#if $cache.liked == 1}}": {
                        "type": "$network.request",
                        "options": {
                          "url": "https://collectmemes.com/devandroidaccess/unlikeMeme.php",
                          "method": "post",
                          "data": {
                            "userId": "{{$global.userKey}}",
                            "memeId": "{{$cache.cur.memeId}}"
                          }
                        },
                        "success": {
                          "type": "$cache.set",
                          "options": {
                            "heart": [
                              {
                                "{{#if 1}}": "file://collect/heart-empty-light.png"
                              },
                              {
                                "{{#else}}": "file://collect/heart-empty-dark.png"
                              }
                            ],
                            "liked": "0"
                          },
                          "success": {
                            "type": "$render"
                          }
                        }
                      }
                    },
                    {
                      "{{#else}}": {
                        "type": "$network.request",
                        "options": {
                          "url": "https://collectmemes.com/devandroidaccess/likeMeme.php",
                          "method": "post",
                          "data": {
                            "userId": "{{$global.userKey}}",
                            "memeId": "{{$cache.cur.memeId}}"
                          }
                        },
                        "success": {
                          "type": "$cache.set",
                          "options": {
                            "heart": "file://shared/heart-full.png",
                            "liked": "1"
                          },
                          "success": {
                            "type": "$render"
                          }
                        }
                      }
                    }
                  ]
                },
                {
                  "type": "image",
                  "url": "{{$cache.currentSpinButton}}",
                  "style": {
                    "top": "70%+50",
                    "width": "42%",
                    "left": "6%",
                    "height": "8%"
                  },
                  "action": {
                    "type": "$href",
                    "options": {
                      "url": "https://collectmemes.com/devandroidviews/collect.json",
                      "transition": "fullscreen",
                      "options": {
                        "spin": "true"
                      }
                    }
                  }
                },
                {
                  "type": "image",
                  "url": "{{$cache.currentCollectButton}}",
                  "style": {
                    "top": "70%+50",
                    "width": "42%",
                    "left": "52%",
                    "height": "8%"
                  },
                  "action": {
                    "trigger": "collect"
                  }
                },
                {
                  "type": "html",
                  "text": "{{$cache.cur.spinMessage}}",
                  "style": {
                    "height": "5%",
                    "top": "80%+55",
                    "width": "42%",
                    "left": "6%"
                  }
                },
                {
                  "type": "image",
                  "url": [
                    {
                      "{{#if 1}}": "file://collect/collection-light.png"
                    },
                    {
                      "{{#else}}": "file://collect/collection-dark.png"
                    }
                  ],
                  "style": {
                    "top": "80%+60",
                    "width": "6%",
                    "left": "70%"
                  },
                  "action": {
                    "type": "$href",
                    "options": {
                      "url": "https://collectmemes.com/devandroidviews/vault.json",
                      "transition": "fullscreen"
                    }
                  }
                }
              ]
            },
            {
              "{{#else}}": [
                {
                  "type": "image",
                  "url": "{{$cache.cur.rarityLining}}",
                  "style": {
                    "top": "-10",
                    "left": "0",
                    "width": "100%",
                    "height": "4%"
                  }
                },
                {
                  "type": "image",
                  "url": "{{$cache.cur.rarityLining}}",
                  "style": {
                    "bottom": "-10",
