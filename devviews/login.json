{
  "$jason": {
    "head": {
      "title": "login",
      "actions": {
        "checkTime": [
          {
            "{{#if ($jason.time > $cache.last)}}": {
              "type": "$cache.set",
              "options": {
                "tries": "4"
              },
              "success": {
                "type": "attemptLogin"
              }
            }
          },
          {
            "{{#else}}": {
              "type": "$util.alert",
              "options": {
                "title": "Too Many Attempts",
                "description": "You have failed to login too many times. Wait 10 minutes, then try again!"
              },
              "success": {
                "type": "$reload"
              }
            }
          }
        ],
        "mainLoad": [
          {
            "{{#if $cache.tries == 4 || $cache.tries == 3 || $cache.tries == 2 || $cache.tries == 1 || $cache.tries == 0}}": {
              "type": "$render"
            }
          },
          {
            "{{#else}}": {
              "type": "$cache.set",
              "options": {
                "tries": "4"
              },
              "success": {
                "type": "$render"
              }
            }
          }
        ],
        "$load": [
          {
            "{{#if $global.userKey != '0'}}": {
              "type": "$href",
              "options": {
                "url": "https://collectmemes.com/views/collect.json"
              }
            }
          },
          {
            "{{#else}}": {
              "trigger": "mainLoad"
            }
          }
        ],
        "updateCache": [
          {
            "{{#if $cache.tries !== 1}}": {
              "type": "$cache.set",
              "options": {
                "tries": "{{$cache.tries - 1}}"
              },
              "success": {
                "type": "$util.alert",
                "options": {
                  "title": "Oops! Incorrect Info...",
                  "description": "You have {{$cache.tries - 1}} tries left until you're locked out for 10 minutes."
                },
                "success": {
                  "type": "$render"
                }
              }
            }
          },
          {
            "{{#else}}": {
              "type": "$network.request",
              "options": {
                "url": "https://collectmemes.com/access/checkTime.php"
              },
              "success": {
                "type": "$cache.set",
                "options": {
                  "last": "{{$jason.time}}",
                  "tries": "0"
                },
                "success": {
                  "type": "$util.alert",
                  "options": {
                    "title": "Too Many Attempts...",
                    "description": "You have failed to login too many times. Please wait 10 minutes and try again."
                  },
                  "success": {
                    "type": "$render"
                  }
                }
              }
            }
          }
        ],
        "cacheCheck": [
          {
            "{{#if $cache.tries !== 'undefined'}}": {
              "trigger": "updateCache"
            }
          },
          {
            "{{#else}}": {
              "type": "$cache.set",
              "options": {
                "tries": "3"
              },
              "success": {
                "type": "$util.alert",
                "options": {
                  "title": "Oops! Incorrect Info...",
                  "description": "You have 3 tries left until you're locked out for 10 minutes."
                },
                "success": {
                  "type": "$reload"
                }
              }
            }
          }
        ],
        "attemptLogin": {
          "type": "$network.request",
          "options": {
            "url": "https://collectmemes.com/access/checkUser.php",
            "method": "post",
            "data": {
              "username": "{{$get.username}}",
              "password": "{{$get.password}}",
              "device": "{{$env.device.os.name}}"
            }
          },
          "success": [
            {
              "{{#if $jason.success == 1}}": {
                "type": "$global.set",
                "options": {
                  "userKey": "{{$jason.userKey}}",
                  "spinsLeft": "{{$jason.spinsLeft}}"
                },
                "success": [
                  {
                    "{{#if 'logout' in $global}}": {
                      "type": "$global.set",
                      "options": {
                        "firstLoadDone": "1"
                      },
                      "success": {
                        "type": "$href",
                        "options": {
                          "url": "https://collectmemes.com/views/collect.json"
                        }
                      }
                    }
                  },
                  {
                    "{{#else}}": {
                      "type": "$global.set",
                      "options": {
                        "firstLoadDone": "0",
                        "spinsLeft": "10"
                      },
                      "success": {
                        "type": "$href",
                        "options": {
                          "url": "https://collectmemes.com/views/collect.json"
                        }
                      }
                    }
                  }
                ]
              }
            },
            {
              "{{#else}}": {
                "trigger": "cacheCheck"
              }
            }
          ]
        },
        "onLogin": {
          "type": "$network.request",
          "options": {
            "url": "https://collectmemes.com/access/checkTries.php",
            "method": "post",
            "data": {
              "tries": "{{$cache.tries}}"
            }
          },
          "success": [
            {
              "{{#if $jason.success == 0}}": {
                "trigger": "attemptLogin"
              }
            },
            {
              "{{#elseif $jason.success == 1}}": {
                "type": "$cache.set",
                "options": {
                  "tries": "4"
                },
                "success": {
                  "trigger": "attemptLogin"
                }
              }
            },
            {
              "{{#elseif $jason.success == 2}}": {
                "type": "$network.request",
                "options": {
                  "url": "https://collectmemes.com/access/checkTime.php",
                  "method": "post",
                  "data": {
                    "sub": "900"
                  }
                },
                "success": {
                  "trigger": "checkTime"
                }
              }
            }
          ]
        }
      },
      "templates": {
        "body": {
          "background": "#ffffff",
          "header": {
            "style": {
              "background": "#ffffff"
            },
            "title": {
              "type": "image",
              "style": {
                "width": "94",
                "height": "27"
              },
              "url": "https://collectmemes.com/img/logo.png"
            }
          },
          "layers": [
            {
              "type": "label",
              "text": "Sign in",
              "style": {
                "color": "#111111",
                "align": "center",
                "width": "300",
                "left": "50%-150",
                "top": "10%",
                "size": "30"
              }
            },
            {
              "type": "label",
              "text": "to an existing account!",
              "style": {
                "color": "#b8b8b8",
                "align": "center",
                "width": "300",
                "left": "50%-150",
                "top": "10%+35",
                "size": "15"
              }
            },
            {
              "type": "textfield",
              "name": "username",
              "placeholder": "username...",
              "style": {
                "font": "Roboto",
                "size": "20",
                "color": "#111111",
                "background": "#eff0f2",
                "padding": "20",
                "top": "21%",
                "width": "80%",
                "left": "10%",
                "corner_radius": "30"
              }
            },
            {
              "type": "textfield",
              "name": "password",
              "placeholder": "password...",
              "style": {
                "font": "Roboto",
                "size": "20",
                "color": "#111111",
                "background": "#eff0f2",
                "padding": "20",
                "secure": "true",
                "top": "34%",
                "width": "80%",
                "left": "10%",
                "corner_radius": "30"
              }
            },
            {
              "type": "label",
              "text": "Sign in",
              "style": {
                "width": "300",
                "height": "55",
                "size": "17",
                "top": "49%",
                "left": "50%-150",
                "background": "#2d91d1",
                "color": "#ffffff",
                "padding": "2",
                "corner_radius": "50",
                "align": "center"
              },
              "action": {
                "trigger": "onLogin"
              }
            },
            {
              "type": "image",
              "url": "https://collectmemes.com/img/back.png",
              "style": {
                "align": "left",
                "left": "2%",
                "width": "7%",
                "top": "2%"
              },
              "action": {
                "type": "$href",
                "options": {
                  "url": "https://collectmemes.com/views/welcome.json",
                  "transition": "push"
                }
              }
            },
            {
              "type": "label",
              "text": "Forgot password?",
              "style": {
                "color": "#b8b8b8",
                "align": "right",
                "width": "300",
                "left": "50%-150",
                "top": "49%+70",
                "size": "15"
              },
              "action": {
                "type": "$href",
                "options": {
                  "url": "https://collectmemes.com/views/forgot-password.json",
                  "transition": "push"
                }
              }
            }
          ]
        }
      }
    }
  }
}
