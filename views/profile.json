{
  "$jason": {
    "head": {
      "data": {
        "load-phrases": [
          { "phrase": "?" }
        ]
      },
      "title": "Empty",
      "actions": {
        "updateProfileInfo": {
          "type": "$network.request",
          "options": {
            "url": "https://collectmemes.com/access/getUserProfileInfo.php",
            "method": "post",
            "data": {
              "userId": "{{$global.userKey}}"
            }
          },
          "success": {
            "type": "$cache.set",
            "options": {
              "username": "{{$jason.username}}",
              "email": "{{$jason.email}}",
              "avatar": "{{$jason.avatar}}",
              "date": "{{$jason.date}}",
              "totalSpins": "{{$jason.totalSpins}}",
              "lastPassChange": "{{$jason.lastPassChange}}"
            },
            "success": {
              "type": "$render"
            }
          }
        },
        "mainLoad": [
          {
            "{{#if $global.userKey != '0'}}": {
              "trigger": "updateProfileInfo"
            }
          },
          {
            "{{#else}}": {
              "type": "$href",
              "options": {
                "url": "https://collectmemes.com/views/welcome.json"
              }
            }
          }
        ],
        "$load": [
          {
            "{{#if 'profUpdated' in $global}}": [
              {
                "{{#if $global.profUpdated == '1'}}": {
                  "type": "$util.banner",
                  "options": {
                    "title": "Nice...",
                    "description": "Email updated successfully!"
                  },
                  "success": {
                    "type": "$global.set",
                    "options": {
                      "profUpdated": "0"
                    },
                    "success": {
                      "trigger": "mainLoad"
                    }
                  }
                }
              },
              {
                "{{#elseif $global.profUpdated == '2'}}": {
                  "type": "$util.banner",
                  "options": {
                    "title": "Nice...",
                    "description": "Email updated successfully!"
                  },
                  "success": {
                    "type": "$global.set",
                    "options": {
                      "profUpdated": "0"
                    },
                    "success": {
                      "trigger": "mainLoad"
                    }
                  }
                }
              },
              {
                "{{#else}}": {
                  "trigger": "mainLoad"
                }
              }
            ]
          },
          {
            "{{#else}}": {
              "trigger": "mainLoad"
            }
          }
        ],
        "logout": {
          "type": "$global.set",
          "options": {
            "userKey": "0"
          },
          "success": {
            "type": "$href",
            "options": {
              "url": "https://collectmemes.com/views/welcome.json",
              "transition": "push"
            }
          }
        },
        "deleteAccount": {
          "type": "$util.alert",
          "options": {
            "title": "Delete Account?",
            "description": "Are you sure you want to delete your account? All collected memes and likes will be lost. Press OK if you're chill with that."
          },
          "success": {
            "type": "$network.request",
            "options": {
              "url": "https://collectmemes.com/access/deleteUser.php",
              "method": "post",
              "data": {
                "userId": "{{$global.userKey}}",
                "pw": "i987hbn2v23hjkg7vgbgk3hbAHRJ198"
              }
            },
            "success": {
              "type": "$global.set",
              "options": {
                "userKey": "0"
              },
              "success": {
                "type": "$href",
                "options": {
                  "url": "https://collectmemes.com/views/welcome.json",
                  "transition": "push"
                }
              }
            }
          }
        }
      },
      "templates": {
        "body": {
          "background": "#111111",
          "style": {
            "border": "none"
          },
          "sections": [
            {
              "items": [
                {
                  "type": "html",
                  "text": "<html>
                  <head>
                    <style>
                      body {
                        background:#111111;
                        margin:0;
                      }
                    </style>
                  </head>
                  <body>
                    <img style='width:100%;position:relative;top:-20px;' src='https://collectmemes.com/img/profiletop.png'>
                  </body>
                  </html>",
                  "style": {
                    "width": "100%",
                    "height": "50%"
                  }
                }
              ]
            }
          ],
          "layers": [
            {
              "type": "label",
              "text": "{{$cache.username}}",
              "style": {
                "width": "150",
                "height": "50",
                "top": "7%",
                "left": "50%-75",
                "align": "center",
                "font": "HelveticaNeue-Bold",
                "size": "30",
                "color": "#ffffff"
              }
            },
            {
              "type": "label",
              "text": "{{$cache.totalSpins}} total spins",
              "style": {
                "width": "400",
                "height": "30",
                "align": "center",
                "top": "17%+130",
                "left": "50%-200",
                "font": "HelveticaNeue-Normal",
                "size": "20",
                "color": "#ffffff"
              }
            },
            {
              "type": "label",
              "text": "Registered {{$cache.date}}",
              "style": {
                "width": "400",
                "height": "30",
                "align": "center",
                "top": "7%+36",
                "left": "50%-200",
                "font": "HelveticaNeue-Bold",
                "size": "15",
                "color": "#ffffff"
              }
            },
            {
              "type": "button",
              "text": "Log Out",
              "style": {
                "width": "50%",
                "height": "6%",
                "align": "center",
                "top": "17%+165",
                "left": "25%",
                "background": "#319CDE",
                "color": "#ffffff",
                "size": "17",
                "corner_radius": "25"
              },
              "action": {
                "trigger": "logout"
              }
            },
            {
              "type": "label",
              "text": "Email",
              "style": {
                "width": "400",
                "height": "25",
                "align": "center",
                "top": "47%",
                "left": "50%-200",
                "font": "HelveticaNeue-Bold",
                "size": "20",
                "color": "#ffffff"
              }
            },
            {
              "type": "label",
              "text": "{{$cache.email}}",
              "style": {
                "width": "400",
                "height": "25",
                "align": "center",
                "top": "47%+25",
                "left": "50%-200",
                "font": "HelveticaNeue-Normal",
                "size": "18",
                "color": "#ffffff"
              }
            },
            {
              "type": "button",
              "text": "Update Email",
              "style": {
                "width": "50%",
                "height": "6%",
                "align": "center",
                "top": "47%+57",
                "left": "25%",
                "background": "#319CDE",
                "color": "#ffffff",
                "size": "17",
                "corner_radius": "25"
              },
              "action": {
                "type": "$href",
                "options": {
                  "url": "https://collectmemes.com/views/update-email.json",
                  "transition": "push"
                }
              }
            },
            {
              "type": "label",
              "text": "Password",
              "style": {
                "width": "400",
                "height": "30",
                "align": "center",
                "top": "54%+72",
                "left": "50%-200",
                "font": "HelveticaNeue-Bold",
                "size": "20",
                "color": "#ffffff"
              }
            },
            {
              "type": "label",
              "text": "Last set {{$cache.lastPassChange}}",
              "style": {
                "width": "400",
                "height": "30",
                "align": "center",
                "top": "54%+102",
                "left": "50%-200",
                "font": "HelveticaNeue-Normal",
                "size": "18",
                "color": "#ffffff"
              }
            },
            {
              "type": "button",
              "text": "Update Password",
              "style": {
                "width": "50%",
                "height": "6%",
                "align": "center",
                "top": "54%+134",
                "left": "25%",
                "background": "#319CDE",
                "color": "#ffffff",
                "size": "17",
                "corner_radius": "25"
              },
              "action": {
                "type": "$href",
                "options": {
                  "url": "https://collectmemes.com/views/update-password.json",
                  "transition": "push"
                }
              }
            },
            {
              "type": "button",
              "text": "Delete Account",
              "style": {
                "width": "50%",
                "height": "6%",
                "align": "center",
                "top": "85%",
                "left": "25%",
                "background": "#e74c3c",
                "color": "#ffffff",
                "size": "17",
                "corner_radius": "25"
              },
              "action": {
                "trigger": "deleteAccount"
              }
            },
            {
              "type": "label",
              "text": "(Cannot be undone!)",
              "style": {
                "width": "400",
                "height": "30",
                "align": "center",
                "top": "91%+1",
                "left": "50%-200",
                "font": "HelveticaNeue-Normal",
                "size": "15",
                "color": "#ffffff"
              }
            },
            {
              "type": "image",
              "url": "{{$cache.avatar}}",
              "style": {
                "width": "120",
                "height": "120",
                "top": "17%",
                "corner_radius": "70",
                "left": "50%-60"
              }
            },
            {
              "type": "image",
              "url": "https://collectmemes.com/img/back.png",
              "style": {
                "align": "left",
                "left": "2%",
                "width": "7%",
                "top": "2%"
              },
              "action": {
                "type": "$href",
                "options": {
                  "url": "https://collectmemes.com/views/collect.json",
                  "transition": "push"
                }
              }
            }
          ]
        }
      }
    }
  }
}
