{
  "$jason": {
    "head": {
      "data": {
        "load-phrases": [
          { "phrase": "?" }
        ]
      },
      "title": "Empty",
      "actions": {
        "updateProfileInfo": {
          "type": "$network.request",
          "options": {
            "url": "https://collectmemes.com/access/getUserProfileInfo.php",
            "method": "post",
            "data": {
              "userId": "{{$global.userKey}}"
            }
          },
          "success": {
            "type": "$cache.set",
            "options": {
              "username": "{{$jason.username}}",
              "email": "{{$jason.email}}",
              "avatar": "{{$jason.avatar}}",
              "date": "{{$jason.date}}",
              "totalSpins": "{{$jason.totalSpins}}",
              "lastPassChange": "{{$jason.lastPassChange}}"
            },
            "success": {
              "type": "$render"
            }
          }
        },
        "$load": [
          {
            "{{#if 'userKey' in $global}}": {
              "trigger": "updateProfileInfo"
            }
          },
          {
            "{{#else}}": {
              "type": "$href",
              "options": {
                "url": "https://collectmemes.com/views/welcome.json"
              }
            }
          }
        ]
      },
      "templates": {
        "body": {
          "background": "#111111",
          "style": {
            "border": "none"
          },
          "sections": [
            {
              "items": [
                {
                  "type": "html",
                  "text": "<html>
                  <head>
                    <style>
                      body {
                        background:#111111;
                        margin:0;
                      }
                    </style>
                  </head>
                  <body>
                    <img style='width:100%;position:relative;top:-20px;' src='https://collectmemes.com/img/profiletop.png'>
                  </body>
                  </html>",
                  "style": {
                    "width": "100%",
                    "height": "50%"
                  }
                }
              ]
            }
          ],
          "layers": [
            {
              "type": "label",
              "text": "{{$cache.username}}",
              "style": {
                "width": "150",
                "height": "50",
                "top": "7%",
                "left": "50%-75",
                "align": "center",
                "font": "HelveticaNeue-Bold",
                "size": "30",
                "color": "#ffffff"
              }
            },
            {
              "type": "label",
              "text": "{{$cache.totalSpins}} total spins",
              "style": {
                "width": "400",
                "height": "30",
                "align": "center",
                "top": "17%+130",
                "left": "50%-200",
                "font": "HelveticaNeue-Normal",
                "size": "20",
                "color": "#ffffff"
              }
            },
            {
              "type": "label",
              "text": "Registered {{$cache.date}}",
              "style": {
                "width": "400",
                "height": "30",
                "align": "center",
                "top": "7%+36",
                "left": "50%-200",
                "font": "HelveticaNeue-Bold",
                "size": "15",
                "color": "#ffffff"
              }
            },
            {
              "type": "label",
              "text": "Email",
              "style": {
                "width": "400",
                "height": "30",
                "align": "center",
                "top": "42%",
                "left": "50%-200",
                "font": "HelveticaNeue-Bold",
                "size": "25",
                "color": "#ffffff"
              }
            },
            {
              "type": "label",
              "text": "{{$cache.email}}",
              "style": {
                "width": "400",
                "height": "30",
                "align": "center",
                "top": "42%+30",
                "left": "50%-200",
                "font": "HelveticaNeue-Normal",
                "size": "20",
                "color": "#ffffff"
              }
            },
            {
              "type": "button",
              "text": "Update Email",
              "style": {
                "width": "60%",
                "height": "8%",
                "align": "center",
                "top": "42%+62",
                "left": "20%",
                "background": "#319CDE",
                "color": "#ffffff",
                "size": "20",
                "corner_radius": "25"
              }
            },
            {
              "type": "label",
              "text": "Password",
              "style": {
                "width": "400",
                "height": "30",
                "align": "center",
                "top": "53%+72",
                "left": "50%-200",
                "font": "HelveticaNeue-Bold",
                "size": "25",
                "color": "#ffffff"
              }
            },
            {
              "type": "label",
              "text": "Last set {{$cache.lastPassChange}}",
              "style": {
                "width": "400",
                "height": "30",
                "align": "center",
                "top": "53%+102",
                "left": "50%-200",
                "font": "HelveticaNeue-Normal",
                "size": "20",
                "color": "#ffffff"
              }
            },
            {
              "type": "button",
              "text": "Update Password",
              "style": {
                "width": "60%",
                "height": "8%",
                "align": "center",
                "top": "53%+134",
                "left": "20%",
                "background": "#319CDE",
                "color": "#ffffff",
                "size": "20",
                "corner_radius": "25"
              },
              "action": {
                "type": "$href",
                "options": {
                  "url": "https://collectmemes.com/views/update-password.json",
                  "transition": "push"
                }
              }
            },
            {
              "type": "button",
              "text": "Delete Account",
              "style": {
                "width": "50%",
                "height": "6%",
                "align": "center",
                "top": "85%",
                "left": "25%",
                "background": "#e74c3c",
                "color": "#ffffff",
                "size": "17",
                "corner_radius": "25"
              }
            },
            {
              "type": "label",
              "text": "(Cannot be undone!)",
              "style": {
                "width": "400",
                "height": "30",
                "align": "center",
                "top": "91%+1",
                "left": "50%-200",
                "font": "HelveticaNeue-Normal",
                "size": "15",
                "color": "#ffffff"
              }
            },
            {
              "type": "image",
              "url": "{{$cache.avatar}}",
              "style": {
                "width": "120",
                "height": "120",
                "top": "17%",
                "corner_radius": "70",
                "left": "50%-60"
              }
            },
            {
              "type": "image",
              "url": "https://collectmemes.com/img/back.png",
              "style": {
                "align": "left",
                "left": "2%",
                "width": "7%",
                "top": "2%"
              },
              "action": {
                "type": "$href",
                "options": {
                  "url": "https://collectmemes.com/views/collect.json",
                  "transition": "push"
                }
              }
            }
          ]
        }
      }
    }
  }
}
