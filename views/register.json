{
  "$jason": {
    "head": {
      "title": "register",
      "actions": {
        "$load": [
          {
            "{{#if 'userKey' in $global}}": {
              "type": "$href",
              "options": {
                "url": "https://collectmemes.com/views/collect.json"
              }
            }
          },
          {
            "{{#else}}": {
              "type": "$render"
            }
          }
        ],
        "attemptCreate": {
          "type": "$network.request",
          "options": {
            "url": "https://collectmemes.com/access/createUser.php",
            "method": "post",
            "data": {
              "username": "{{$get.username}}",
              "email": "{{$get.email}}",
              "password": "{{$get.password}}"
            }
          },
          "success": [
            {
              "{{#if $jason.success == 1}}": {
                "type": "$global.set",
                "options": {
                  "userKey": "{{$jason.userKey}}",
                  "spinsLeft": "10",
                  "firstLoadDone": "0"
                },
                "success": {
                  "type": "$href",
                  "options": {
                    "url": "https://collectmemes.com/views/collect.json"
                  }
                }
              }
            },
            {
              "{{#elseif $jason.success == 0}}": {
                "type": "$util.alert",
                "options": {
                  "title": "Maintenence",
                  "description": "CollectMemes is doing some backend work right now. Try registering in a little bit!"
                }
              }
            }
          ]
        },
        "onClick": {
          "type": "$network.request",
          "options": {
            "url": "https://collectmemes.com/access/checkRegisterCredentials.php",
            "method": "post",
            "data": {
              "username": "{{$get.username}}",
              "email": "{{$get.email}}",
              "password": "{{$get.password}}"
            }
          },
          "success": [
            {
              "{{#if $jason.success == 1}}": {
                "trigger": "attemptCreate"
              }
            },
            {
              "{{#elseif $jason.success == 0}}": {
                "type": "$util.alert",
                "options": {
                  "title": "So close...",
                  "description": "{{$jason.failed}}"
                },
                "success": {
                  "type": "$reload"
                }
              }
            }
          ]
        }
      },
      "templates": {
        "body": {
          "background": "#ffffff",
          "header": {
            "style": {
              "background": "#ffffff"
            },
            "title": {
              "type": "image",
              "style": {
                "width": "94",
                "height": "27"
              },
              "url": "https://collectmemes.com/img/logo.png"
            }
          },
          "layers": [
            {
              "type": "label",
              "text": "Register",
              "style": {
                "color": "#111111",
                "align": "center",
                "width": "300",
                "left": "50%-150",
                "top": "10%",
                "size": "30"
              }
            },
            {
              "type": "label",
              "text": "a new account!",
              "style": {
                "color": "#b8b8b8",
                "align": "center",
                "width": "300",
                "left": "50%-150",
                "top": "10%+35",
                "size": "15"
              }
            },
            {
              "type": "textfield",
              "name": "username",
              "placeholder": "preferred username...",
              "style": {
                "font": "Roboto",
                "size": "20",
                "color": "#111111",
                "background": "#eff0f2",
                "padding": "20",
                "top": "21%",
                "width": "80%",
                "left": "10%",
                "corner_radius": "30"
              }
            },
            {
              "type": "textfield",
              "name": "email",
              "placeholder": "email...",
              "style": {
                "font": "Roboto",
                "size": "20",
                "color": "#111111",
                "background": "#eff0f2",
                "padding": "20",
                "top": "34%",
                "width": "80%",
                "left": "10%",
                "corner_radius": "30"
              }
            },{
              "type": "textfield",
              "name": "password",
              "placeholder": "password...",
              "style": {
                "font": "Roboto",
                "size": "20",
                "color": "#111111",
                "background": "#eff0f2",
                "padding": "20",
                "secure": "true",
                "top": "47%",
                "width": "80%",
                "left": "10%",
                "corner_radius": "30"
              }
            },
            { "type": "label",
              "text": "Register",
              "style": {
                "width": "300",
                "height": "55",
                "size": "17",
                "top": "62%",
                "left": "50%-150",
                "background": "#2d91d1",
                "color": "#ffffff",
                "padding": "2",
                "corner_radius": "50",
                "align": "center"
              },
              "action": {
                "trigger": "onClick"
              }
            },
            {
              "type": "image",
              "url": "https://collectmemes.com/img/back.png",
              "style": {
                "align": "left",
                "left": "2%",
                "width": "7%",
                "top": "2%"
              },
              "action": {
                "type": "$href",
                "options": {
                  "url": "https://collectmemes.com/views/welcome.json",
                  "transition": "push"
                }
              }
            },
            {
              "type": "label",
              "text": "Already have an account?",
              "action": {
                "type": "$href",
                "options": {
                  "url": "https://collectmemes.com/views/login.json",
                  "transition": "push"
                }
              },
              "style": {
                "color": "#b8b8b8",
                "align": "right",
                "width": "300",
                "left": "50%-150",
                "top": "62%+70",
                "size": "15"
              }
            }
          ]
        }
      }
    }
  }
}
