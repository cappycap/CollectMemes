{
  "$jason": {
    "head": {
      "title": "login",
      "actions": {
        "onClick": {
          "type": "$network.request",
          "options": {
            "url": "https://collectmemes.com/access/forgot.php",
            "method": "post",
            "data": {
              "email": "$get.email"
            }
          },
          "success": {
            "type": "$util.alert",
            "options": {
              "title": "Request Submitted!"
              "description": "If that email is registered, you will receive a password reset request shortly."
            },
            "success": {
              "type": "$href",
              "options": {
                "url": "https://collectmemes.com/views/login.json"
              }
            }
          }
        }
      }
    },
    "body": {
      "background": "#ffffff",
      "header": {
        "style": {
          "background": "#ffffff"
        },
        "title": {
          "type": "image",
          "style": {
            "width": "94",
            "height": "27"
          },
          "url": "https://collectmemes.com/img/logo.png"
        }
      },
      "layers": [
        {
          "type": "label",
          "text": "Password Recovery",
          "style": {
            "color": "#111111",
            "align": "center",
            "width": "300",
            "left": "50%-150",
            "top": "10%",
            "size": "30"
          }
        },
        {
          "type": "label",
          "text": "Enter email associated with your account.",
          "style": {
            "color": "#b8b8b8",
            "align": "center",
            "width": "300",
            "left": "50%-150",
            "top": "10%+35",
            "size": "15"
          }
        },
        {
          "type": "textfield",
          "name": "email",
          "placeholder": "email...",
          "style": {
            "font": "Roboto",
            "size": "20",
            "color": "#111111",
            "background": "#eff0f2",
            "padding": "20",
            "top": "21%",
            "width": "80%",
            "left": "10%",
            "corner_radius": "30"
          }
        },
        { "type": "label",
          "text": "Submit",
          "style": {
            "width": "300",
            "height": "55",
            "size": "17",
            "top": "49%",
            "left": "50%-150",
            "background": "#2d91d1",
            "color": "#ffffff",
            "padding": "2",
            "corner_radius": "50",
            "align": "center"
          },
          "action": {
            "trigger": "onClick"
          }
        },
        {
          "type": "image",
          "url": "https://collectmemes.com/img/back.png",
          "style": {
            "align": "left",
            "left": "2%",
            "width": "7%",
            "top": "2%"
          },
          "action": {
            "type": "$href",
            "options": {
              "url": "https://collectmemes.com/views/login.json",
              "transition": "push"
            }
          }
        }
      ]
    }
  }
}
