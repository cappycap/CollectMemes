{
  "$jason": {
    "head": {
      "data": {
        "load-phrases": [
          { "phrase": "?" }
        ]
      },
      "title": "Empty",
      "actions": {
        "mainLoad": {
          "type": "$network.request",
          "options": {
            "url": "https://collectmemes.com/access/getMemeById.php",
            "method": "post",
            "data": {
              "id": "{{$params.memeId}}",
              "userKey": "{{$global.userKey}}"
            }
          }
        },
        "$load": [
          {
            "{{#if 'userKey' in $global && 'memeId' in $params}}": {
              "trigger": "mainLoad"
            }
          },
          {
            "{{#else}}": {
              "type": "$href",
              "options": {
                "url": "https://collectmemes.com/views/vault.json"
              }
            }
          }
        ]
      },
      "templates": {
        "body": {
          "layers": [
            {
              "type": "image",
              "url": "https://collectmemes.com/app-images-new/logo.png",
              "style": {
                "width": "300",
                "height": "100",
                "top": "50%-50",
                "left": "50%-150"
              }
            },
            {
              "type": "label",
              "text": "' . $phrase . '",
              "style": {
                "width": "80%",
                "height": "100",
                "top": "50%+100",
                "left": "10%",
                "font": "HelveticaNeue-Bold",
                "size": "16",
                "color": "#000000"
              }
            }
          ]
        }
      }
    }
  }
}
